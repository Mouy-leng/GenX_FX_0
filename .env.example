# .env.example
# This file contains the default environment variables for the application.
# Copy this file to .env and fill in the required values.

# -------------------------------------
# API Configuration
# -------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# -------------------------------------
# Database Configuration (PostgreSQL)
# -------------------------------------
# These are used by docker-compose to set up the database.
# The API service in docker-compose will connect to the 'postgres' service.
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_USER=genx
POSTGRES_PASSWORD=password
POSTGRES_DB=genx_trading

# -------------------------------------
# Cache Configuration (Redis)
# -------------------------------------
# The API service in docker-compose will connect to the 'redis' service.
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# -------------------------------------
# Security
# -------------------------------------
# Generate a strong secret key for JWT tokens.
# You can generate one using: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-that-is-at-least-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -------------------------------------
# Exness Broker Configuration
# -------------------------------------
EXNESS_LOGIN=
EXNESS_PASSWORD=
EXNESS_SERVER=Exness-MT5Trial8
EXNESS_ACCOUNT_TYPE=demo # 'demo' or 'live'
EXNESS_TERMINAL=MT5 # 'MT4' or 'MT5'

# -------------------------------------
# Trading Configuration
# -------------------------------------
MT5_SYMBOL=XAUUSD
MT5_TIMEFRAME=TIMEFRAME_M15
EA_MAGIC_NUMBER=12345
EA_DEFAULT_LOT_SIZE=0.01
EA_MAX_RISK_PER_TRADE=0.02

# -------------------------------------
# EA Communication Server
# -------------------------------------
EA_SERVER_HOST=localhost
EA_SERVER_PORT=5000

# -------------------------------------
# Logging Configuration
# -------------------------------------
LOG_LEVEL=INFO
LOG_FILE=/var/log/genx-trading/app.log

# -------------------------------------
# AI Services
# -------------------------------------
GEMINI_API_KEY=

# -------------------------------------
# Other API Keys
# -------------------------------------
FXCM_API_KEY=
NEWSDATA_API_KEY=
ALPHAVANTAGE_API_KEY=
NEWSAPI_ORG_KEY=
FINNHUB_API_KEY=
FMP_API_KEY=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=
BYBIT_API_KEY=
BYBIT_API_SECRET=