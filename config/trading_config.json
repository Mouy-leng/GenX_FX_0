{
  "system": {
    "name": "GenX FX Trading System",
    "version": "2.0.0",
    "environment": "production",
    "debug_mode": false
  },

  "trading": {
    "symbols": ["EURUSD", "GBPUSD", "USDJPY", "USDCHF", "AUDUSD", "USDCAD", "NZDUSD"],
    "timeframes": ["M15", "H1", "H4", "D1"],
    "primary_timeframe": "H1",
    "signal_generation_interval": 300,
    "max_concurrent_signals": 3,
    "min_confidence_threshold": 0.65,
    "signal_expiry_hours": 4,
    "max_signal_age_hours": 24
  },

  "risk_management": {
    "max_risk_per_trade": 0.02,
    "max_total_risk": 0.06,
    "position_sizing_method": "fixed_fractional",
    "stop_loss_method": "atr_based",
    "take_profit_ratio": 2.0,
    "trailing_stop_enabled": false,
    "risk_reward_minimum": 1.5,
    "volatility_adjustment": true,
    "market_condition_adjustment": true
  },

  "ai_models": {
    "ensemble_size": 5,
    "retrain_interval_hours": 24,
    "lookback_periods": 100,
    "feature_engineering": true,
    "cross_validation_folds": 5,
    "model_weights_auto_adjust": true,
    "confidence_threshold_dynamic": true,
    "models": {
      "random_forest": {
        "enabled": true,
        "n_estimators": 100,
        "max_depth": 10,
        "min_samples_split": 5
      },
      "xgboost": {
        "enabled": true,
        "n_estimators": 100,
        "max_depth": 6,
        "learning_rate": 0.1
      },
      "lightgbm": {
        "enabled": true,
        "n_estimators": 100,
        "max_depth": 6,
        "learning_rate": 0.1
      },
      "gradient_boosting": {
        "enabled": true,
        "n_estimators": 100,
        "max_depth": 6,
        "learning_rate": 0.1
      },
      "svm": {
        "enabled": true,
        "kernel": "rbf",
        "probability": true
      },
      "neural_network": {
        "enabled": false,
        "hidden_layer_sizes": [100, 50],
        "max_iter": 1000
      }
    }
  },

  "feature_engineering": {
    "technical_indicators": {
      "sma_periods": [10, 20, 50, 100],
      "ema_periods": [12, 26, 50],
      "rsi_period": 14,
      "macd_fast": 12,
      "macd_slow": 26,
      "macd_signal": 9,
      "bollinger_period": 20,
      "bollinger_std": 2,
      "atr_period": 14,
      "stochastic_k": 14,
      "stochastic_d": 3,
      "williams_r_period": 14,
      "cci_period": 20
    },
    "price_features": {
      "price_changes": [1, 3, 5, 10],
      "returns": [1, 5, 10, 20],
      "volatility_windows": [10, 20, 50],
      "volume_features": true,
      "gap_analysis": true
    },
    "time_features": {
      "hour_of_day": true,
      "day_of_week": true,
      "market_session": true,
      "session_overlap": true,
      "economic_calendar": false
    }
  },

  "validation": {
    "timeframe_confluence_required": 2,
    "technical_confluence_threshold": 3,
    "fundamental_weight": 0.3,
    "sentiment_weight": 0.2,
    "multi_timeframe_validation": true,
    "cross_market_correlation": true,
    "volatility_filter": true,
    "liquidity_filter": true
  },

  "fxcm": {
    "use_mock": true,
    "environment": "demo",
    "access_token": "",
    "server_url": "https://api-fxpractice.fxcm.com",
    "socket_url": "wss://api-fxpractice.fxcm.com/socket.io/",
    "timeout": 30,
    "retry_attempts": 3,
    "rate_limit_delay": 0.1,
    "refresh_interval": 60,
    "reconnect_on_failure": true,
    "max_reconnect_attempts": 5
  },

  "spreadsheet": {
    "output_directory": "signal_output",
    "update_interval": 30,
    "max_signals": 50,
    "backup_enabled": true,
    "backup_interval_hours": 24,
    "formats": {
      "excel": true,
      "csv": true,
      "json": true,
      "mt4_csv": true,
      "mt5_csv": true
    },
    "excel_formatting": {
      "color_coding": true,
      "conditional_formatting": true,
      "charts": true,
      "pivot_tables": false
    }
  },

  "market_sessions": {
    "asian": {
      "start_hour": 22,
      "end_hour": 8,
      "timezone": "UTC"
    },
    "london": {
      "start_hour": 8,
      "end_hour": 16,
      "timezone": "UTC"
    },
    "new_york": {
      "start_hour": 13,
      "end_hour": 21,
      "timezone": "UTC"
    }
  },

  "backtesting": {
    "default_start_date": "2023-01-01",
    "default_end_date": "2024-12-31",
    "initial_balance": 100000,
    "commission_per_trade": 7.0,
    "slippage_pips": 1.0,
    "benchmark": "SPY",
    "performance_metrics": [
      "total_return",
      "sharpe_ratio",
      "max_drawdown",
      "win_rate",
      "profit_factor",
      "calmar_ratio"
    ]
  },

  "notifications": {
    "enabled": false,
    "slack": {
      "enabled": false,
      "webhook_url": "",
      "channel": "#trading-signals"
    },
    "telegram": {
      "enabled": false,
      "bot_token": "",
      "chat_id": ""
    },
    "email": {
      "enabled": false,
      "smtp_server": "",
      "smtp_port": 587,
      "username": "",
      "password": "",
      "recipients": []
    }
  },

  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_logging": true,
    "log_file": "logs/genx_trading.log",
    "max_file_size": "10MB",
    "backup_count": 5,
    "console_logging": true
  },

  "performance": {
    "async_workers": 4,
    "cache_size": 1000,
    "batch_processing": true,
    "batch_size": 10,
    "memory_optimization": true,
    "gc_threshold": 0.8
  },

  "security": {
    "encrypt_config": false,
    "api_key_rotation": false,
    "access_logging": true,
    "error_reporting": true,
    "anonymize_logs": false
  },

  "experimental": {
    "deep_learning": false,
    "reinforcement_learning": false,
    "alternative_data": false,
    "sentiment_analysis": false,
    "news_integration": false,
    "social_media_sentiment": false
  }
}